<view class="search-wrapper"><view class="search-header topbar"><input class="search-input" placeholder-class="phcolor" placeholder="{{placeholder}}" data-event-opts="{{[['confirm',[['search',['$event']]]]]}}" bindconfirm="__e"/><text class="iconfont icon-sousuo"></text><view data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="cancel" bindtap="__e">取消</view></view><view class="result-list"><block wx:if="{{$root.g0!==0}}"><view class="options" style="margin-top:98rpx;"><text>历史搜索记录</text><text data-event-opts="{{[['tap',[['clearHistory',['$event']]]]]}}" bindtap="__e">清空</text></view></block><view class="options"><block wx:for="{{history}}" wx:for-item="item" wx:for-index="index" wx:key="index"><text class="item" data-index="{{index}}" data-event-opts="{{[['tap',[['search',['$event']]]]]}}" bindtap="__e">{{item}}</text></block></view><block wx:if="{{$root.g1}}"><view class="movie-box"><view class="title">电影</view><block wx:for="{{movies}}" wx:for-item="movie" wx:for-index="index" wx:key="id"><navigator class="movie-section" url="{{'/pages/subPages/movie-detail/movie-detail?movieId='+movie.id}}"><image class="movie-img" src="{{movie.img}}"></image><view class="movie-info"><view class="movie-name line-ellipsis">{{''+movie.nm+''}}<text class="{{['version '+movie.version]}}"></text></view><view class="line-ellipsis">{{movie.enm}}</view><view class="line-ellipsis">{{movie.cat}}</view><view class="line-ellipsis">{{movie.rt}}</view></view><view class="score"><block wx:if="{{movie.sc}}"><text class="grade">{{movie.sc+"分"}}</text></block><block wx:else><text>暂无评分</text></block></view></navigator></block></view></block><block wx:if="{{$root.g2}}"><view><view class="title">影院</view><block wx:for="{{cinemas}}" wx:for-item="cinema" wx:for-index="index" wx:key="id"><block name="cinemaSection"><navigator class="cinema-section" url="{{'/pages/subPages/cinema-detail/cinema-detail?cinemaId='+cinema.cinema.id}}" hover-class="none"><view class="name-price line-ellipsis">{{cinema.cinema.nm}}</view><view class="address"><text class="line-ellipsis">{{cinema.cinema.addr}}</text><text class="distance">{{cinema.cinema.distance+"km"}}</text></view><view class="feature-tags"><block wx:if="{{cinema.cinema.endorse}}"><text>退</text></block><block wx:if="{{cinema.cinema.allowrefund}}"><text>改签</text></block><block wx:for="{{cinema.hallTypeList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><text>{{item.halltype}}</text></block></view></navigator></block></block></view></block></view><block wx:if="{{!$root.g3}}"><view><block wx:if="{{false}}"><block name="nothing"><view class="nothing"><image class="nothing-img" src="/static/image/user/nothing.png"></image><view class="nothing-text">没有找到相关内容</view></view></block></block></view></block></view>
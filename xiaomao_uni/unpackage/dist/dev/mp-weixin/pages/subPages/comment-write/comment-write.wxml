<view class="write"><image class="movie-poster" src="{{img}}"></image><view class="{{[key==0?'user_sc':'user_sc2']}}"><block wx:if="{{key!=0}}"><text style="font-size:35rpx;">{{key*2}}</text></block><text style="font-size:20rpx;">{{user_sc}}</text></view><view><block wx:for="{{index}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><image class="movie-star" src="{{key>item?key-item==0.5?halfSrc:selectedSrc:normalSrc}}"></image><view class="item" style="margin-left:0rpx;" data-key="{{item+0.5}}" data-event-opts="{{[['tap',[['selectLeft',['$event']]]]]}}" bindtap="__e"></view><view class="item" style="margin-left:25rpx;" data-key="{{item+1}}" data-event-opts="{{[['tap',[['selectRight',['$event']]]]]}}" bindtap="__e"></view></block></block></view><view style="width:100%;height:2rpx;background:#f2f2f2;"></view><block wx:if="{{hasComment}}"><textarea data-event-opts="{{[['input',[['inputHandler',['$event']]]]]}}" class="text" value="{{comment}}" bindinput="__e"></textarea></block><block wx:else><textarea class="text" placeholder="请写下你的感受" data-event-opts="{{[['input',[['inputHandler',['$event']]]]]}}" bindinput="__e"></textarea></block><button data-event-opts="{{[['tap',[['addComment',['$event']]]]]}}" class="submit" bindtap="__e">发布</button></view>
<configuration>
    <!-- 定义日志格式 -->
    <layout class="org.apache.log4j.PatternLayout">
        <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] %c{1}:%L - %m%n"/>
    </layout>

    <!-- 定义输出级别 -->
    <root>
        <priority value="DEBUG"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>